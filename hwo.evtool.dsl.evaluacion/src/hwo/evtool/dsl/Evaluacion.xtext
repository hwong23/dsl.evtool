grammar hwo.evtool.dsl.Evaluacion with org.eclipse.xtext.common.Terminals
generate evaluacion "http://www.evtool.hwo/dsl/Evaluacion"

MaquinaEstados :
	{MaquinaEstados}
	('eventos'
		events+=Evento+
	)?
	('resetEvents'
		resetEvents+=[Evento]+
	)?
	('comandos'
		commands+=Comando+
	)?
	states+=Estado*
;

Evento:
	name=ID code=ID
;

Comando:
	name=ID '=' argumento=STRING
	(':' comentario=STRING)?
;

Estado:
	'state' name=ID
		('actions' '{' actions+=[Comando]+ '}')?
		transitions+=Transicion*
;

Transicion:
	event=[Evento] '=>' state=[Estado]
;

